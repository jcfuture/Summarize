<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.parking.dao.AnnouncementMapper">
    <insert id="InsertMessage" keyProperty="id">
        insert into announcement (title, type, content, creTime, updTIme) values(#{tille} , #{type} , #{content} , now() , now())
    </insert>

    <select id="getAll" resultType="Announcement">
        select * from announcement
    </select>

    <select id="getOnce" resultType="Announcement">
        select * from announcement where id = #{id}
    </select>

    <update id="updateMessage">
        update announcement set title = #{title} , type = #{type} , content = #{content} , updTime = now()
        where id = #{id}
    </update>

    <delete id="delInformation">
        delete from announcement where id = #{id}
    </delete>

    <select id="getMessageByTitle" resultType="Announcement">
        select * from announcement where title like #{title}
    </select>

    <select id="getMessageByType" resultType="Announcement">
        select * from announcement where type like #{type}
    </select>
</mapper>