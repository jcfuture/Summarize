<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.parking.dao.ParkingSpacesMapper">
    <insert id="Insert" keyProperty="id">
        insert into ParkingSpaces (parkingSpaces_type , parkingSpaces_state , parkingSpaces_local)
        values (#{type} , #{state} , #{local})
    </insert>

    <select id="getAll" resultType="ParkingSpaces">
        select * from ParkingSpaces
    </select>
    
    <select id="parkingSpaces" resultType="int">
        select count(*) from ParkingSpaces where ParkingSpaces_state like #{state}
    </select>

    <select id="smallCar" resultType="int">
        select count(*) from ParkingSpaces where ParkingSpaces_type like #{type}
    </select>

    <select id="parkWithType" resultType="int">
        select count(*) from ParkingSpaces
        where ParkingSpaces_type like #{type}
        and ParkingSpaces_state like #{parkType}
    </select>

    <select id="getOnceById" resultType="ParkingSpaces">
        select * from ParkingSpaces where id = #{id}
    </select>

    <update id="Update">
        update ParkingSpaces set ParkingSpaces_type = #{type} , ParkingSpaces_state = #{state} ,
                                 ParkingSpaces_local = #{local} where id = #{id}
    </update>

    <update id="UpdateLocal">
        update ParkingSpaces set ParkingSpaces_state= "已停车" where ParkingSpaces_local = #{local}
    </update>

    <select id="getListByType" resultType="ParkingSpaces">
        select * from ParkingSpaces where ParkingSpaces_type like #{type};
    </select>

    <select id="getListByState" resultType="ParkingSpaces">
        select * from ParkingSpaces where ParkingSpaces_state like #{state};
    </select>

    <select id="getListByLocal" resultType="ParkingSpaces">
        select * from ParkingSpaces where ParkingSpaces_local like #{local};
    </select>
</mapper>